  <link href='https://tomas.github.io/skel.css/dist/skel.min.css' rel='stylesheet' type='text/css'>
  <link href="https://assets.btcdn.co/themes/6062/styles.css" rel="stylesheet" media="all" type="text/css" />

  <link href="/css/wiki.css?<%= Time.now.to_i %>" rel="stylesheet" media="all" type="text/css" />
  <link href="/css/coderay.css?<%= Time.now.to_i %>" rel="stylesheet" media="all" type="text/css" />
  <link href="/css/videos.css?<%= Time.now.to_i %>" rel="stylesheet" media="all" type="text/css" />
</head>

<body id="home">

<div id="wrapper">
  <header id="nav" class="container">
    <div class="navbar">

      <a class="toggle-menu-icon right" onclick="$('#mobile-menu').toggleClass('active'); return false" href="#mobile-menu">
        <i class="ion-navicon">&nbsp;</i>
      </a>

      <a id="logo" title="Portada" href="/">
        <img src="/img/logo-bootic-ayuda.png" alt="Bootic" />
      </a>

      <div id="mobile-menu" class="dropdown">
        <ul class="menu">
          <li class="item menuitem-portada">
            <a href="https://www.bootic.io">Portada Bootic</a>
          </li>

          <li class="item menuitem-preguntas-frecuentes">
            <a href="https://www.bootic.io/pages/faq">Preguntas Frecuentes</a>
          </li>

          <li class="item menuitem-nuestro-blog">
            <a href="https://www.bootic.io/blog">Nuestro blog</a>
          </li>

          <li class="item menuitem-planes-y-precios">
            <a href="https://www.bootic.io/pages/planes">Planes y precios</a>
          </li>

          <li class="item menuitem-diseno-y-plantillas">
            <a href="https://www.bootic.io/pages/themes">Diseño y plantillas</a>
          </li>
          
          <li class="item menuitem-integraciones-y-apps">
            <a href="https://www.bootic.io/pages/integraciones">Integraciones y apps</a>
          </li>

          <li class="item menuitem-desarrolladores">
            <a href="https://dev.bootic.io">Desarrolladores</a>
          </li>

          <li class="item menuitem-el-equipo">
            <a href="https://www.bootic.io/pages/equipo">El equipo</a>
          </li>

          <li class="item menuitem-ayuda">
            <a href="http://wiki.bootic.io/es">Ayuda</a>
          </li>

          <li class="item menuitem-contacto">
            <a href="https://www.bootic.io/forms/contacto">Contacto</a>
          </li>

        </ul>
      </div>

    </div>
  </header>

  <section id="search-bar" class="slim section">
    <div class="container">

      <div class="title_info">
        <% if false && current_section %><!-- use global wiki link -->
          <h2>
            <a href="<%= current_section.url %>">
              <%= current_section.title %>
            </a>
          </h2>
          <p><%= current_section.description %></p>

        <% else %>

          <!-- 
          <h2><a href="/">Documentación Bootic</a></h2>
          <p>Toda la información que necesitas para empezar a vender en línea.</p>
          -->

        <% end %>

      </div>

      <!-- lunr search -->
      <form id="search_form" style="margin-bottom: 0">
        <div class="b">
          <input type="search" placeholder="Escribe una palabra o tema para buscar (Ej: Activar Webpay, o como configurar un dominio propio)" id="search" autocomplete="off" tabindex="1" />
          <button type="submit" class="primary button hidden">Buscar</button>
        </div>

        <div id="search_box" style="display: none">
          <div class="container">
            <ul id="results"></ul>
          </div>
        </div>
      </form>
    </div><!-- /container -->
  </section>

  <div class="container row">

    <div id="sidebar" class="span-3">
      <h4>
        Índice
        <small class="toggle-menu visible-phone"><a href="#" onclick="$('.side_menu').toggleClass('hidden-phone')">
          (Mostrar)
        </a></small>
      </h4>


      <ul class="hidden-phone side_menu clearfix">
        <li class="page depth_1">
          <a href="/es">Inicio</a>
        </li>
        <% Page.find('/es').each do |page| %>
          <%= build_menu page %>
        <% end %>
      </ul>

    </div><!-- /sidebar -->

    <div id="content" class="span-9">

      <div id="content_wrapper">
        <%= @content %>
      </div>

      <% unless !@page || ['/es', '/en', '/'].include?(@page.url) %>
        <!--<div class="more-at-the-bottom text-center" style="margin: 50px 0">
          ¿Tienes dudas sobre este artículo? <a href="https://www.bootic.io/forms/contacto" title="formulario de contacto">¡Escríbenos!</a>
        </div>-->
      <% end %>

    </div><!-- /content -->

  </div><!-- /main container -->

  <section class="section medium dark text-center">
    <div class="container">
    <h2 class="title">¿Sigues con dudas?</h2>
    <p class="text">No hay problema. Estamos acá para ayudarte (o en el botoncito de abajo a la derecha).</p>
    <a href="https://www.bootic.io/forms/contacto" class="button">Escríbenos</a>
  </div>
  </section>

  <div id="wrapper-push"></div>
</div><!-- close wrapper -->

