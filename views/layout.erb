<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8"/>

  <!-- Always force latest IE rendering engine & Chrome Frame -->
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title>Documentación Bootic - <%= @page.title if @page %></title>
  <meta name="description" content="<%= @page.description if @page %>" />
  <meta name="keywords" content="<%= @page.keywords if @page %>" />

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="shortcut icon" href="http://static.bootic.net/themes/1322/favicon.ico">

  <link href="http://static.bootic.net/themes/1322/bootstrap.min.css" media="all" rel="stylesheet" type="text/css" />
  <link href="http://static.bootic.net/themes/1322/bootstrap-responsive.min.css" media="all" rel="stylesheet" type="text/css" />
  <link href="http://static.bootic.net/themes/1322/master.css" media="all" rel="stylesheet" type="text/css" />
  <link href="http://static.bootic.net/themes/1322/responsive.css" media="all" rel="stylesheet" type="text/css" />
  <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css'>

  <link rel="stylesheet" href="/css/wiki.css" type="text/css" media="screen" title="no title" charset="utf-8">
  <link rel="stylesheet" href="/css/coderay.css" type="text/css" media="screen" charset="utf-8">

</head>

<body id="wiki">

<div id="header">
  <div class="stripe">
    <div class="container">

      <a class="pull-right menu-toggle" data-toggle="collapse" data-target=".nav-collapse">
        Menu
      </a>

      <h1>
        <a href="/"><img src="http://static.bootic.net/themes/1322/logo.png" alt="Bootic" /></a>
      </h1>

      <div class="nav-collapse collapse">
        <ul class="nav menu pull-right">

          <li class="menuitem-portada current">
            <a href="/">Portada</a>
          </li>

          <li class="menuitem-planes-y-precios">
            <a href="/pages/planes">Planes y precios</a>
          </li>

          <li class="menuitem-faq">
            <a href="/pages/faq">FAQ</a>
          </li>

          <li class="menuitem-blog">
            <a href="/blog/page">Blog</a>
          </li>

          <li class="menuitem-about">
            <a href="/pages/about">Acerca</a>
          </li>

          <li class="menuitem-contact">
            <a href="/forms/contact">Contacto</a>
          </li>

        </ul>
      </div>

    </div><!-- /container -->
  </div><!-- /stripe -->
</div><!-- /header -->

<div id="main" class="container clearfix">

  <div class="title">
    <% if current_section %>
      <h2>
        <a href="<%= current_section.url %>">
        <%= current_section.title %>
        </a>
      </h2>
      <p><%= current_section.description %></p>
    <% else %>
      <h2>Documentación Bootic</h2>
      <p>Todo la información para empezar a vender en línea.</p>
    <% end %>

    <!-- lunr search -->
    <form id="search_form">
      <div class="b">
        <input type="search" placeholder="Busca una pregunta, palabra o tema" id="search" autocomplete="off" tabindex="1" />
        <button type="submit" class="btn btn-success">Buscar</button>
      </div>

      <div id="search_box" style="display: none">
        <ul id="results"></ul>
      </div>

    </form>

  </div><!-- /title -->

  <div class="row">

    <% if !is_index? %>
    <div id="sidebar" class="span3">
      <a class="toggle-menu visible-phone" href="#" onclick="$(this).next().toggleClass('hidden-phone')">
        Ver menú
      </a>

      <ul class="hidden-phone side_menu">
        <li class="page depth_2">
          <a href="<%= current_section.url %>">Introducción</a>
        </li>
        <% current_section.each do |page| %>
          <%= build_menu page %>
        <% end %>
      </ul>

    </div><!-- /sidebar -->
    <% end %>

    <div id="content" class="<%= is_index? ? '' : 'span9' %>">

      <div id="content_wrapper">
        <%= @content %>
      </div>

    </div><!-- /content -->

  </div><!-- /row -->

</div><!-- /container -->

<div id="bottom-call" class="clearfix">

  <div class="container">
    <p>
      <span>Crea tu tienda hoy mismo. Sin compromisos.</span>
      <a href="http://www.bootic.net/pages/planes" class="btn btn-large btn-primary">Ver planes</a>
    </p>
  </div>

</div>

<div id="footer" class="clearfix">
  <p>&copy; <%= Time.now.year %> <a target="_blank" href="http://bootic.net">Bootic.net</a></p>
</div><!-- /footer -->

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
<script src="http://www.bootic.net/javascripts/libs/jquery.easing.pack.js" type="text/javascript"></script>
<script src="http://static.bootic.net/themes/1322/bootstrap-collapse.js" type="text/javascript"></script>
<script src="http://static.bootic.net/themes/1322/app.js" type="text/javascript"></script>

<script type="text/javascript" src="/fancybox/jquery.mousewheel-3.0.4.pack.js"></script>
<script type="text/javascript" src="/fancybox/jquery.fancybox-1.3.4.pack.js"></script>
<script type="text/javascript" src="/js/vendor/lunr.min.js"></script>
<script type="text/javascript" src="/js/vendor/jquery.sticky.js"></script>
<script type="text/javascript" src="/js/wiki.js"></script>

<script type="text/javascript">

  ////////////////////////////////////
  // disqus
  ////////////////////////////////////

  var disqus_shortname = 'booticwiki';
  var disqus_identifier = '<%= current_url %>';
  var disqus_url = '<%= current_url %>';
  <% if development? %>
  var disqus_developer = 1;
  <% end %>

  (function() {
      var dsq = document.createElement('script');
      dsq.type = 'text/javascript';
      dsq.async = true;
      dsq.src = 'http://' + disqus_shortname + '.disqus.com/embed.js';
      document.getElementsByTagName('head')[0].appendChild(dsq);
  })();

  ////////////////////////////////////
  // analytics
  ////////////////////////////////////

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-3666433-6']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>

</body>
</html>
