  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

  <meta name="description" content="<%= @page ? @page.description : 'Preguntas y respuestas sobre Bootic, sus funcionalidades y sus distintos componentes.' %>" />
  <meta name="keywords" content="<%= @page.keywords if @page %>" />
  <meta name="author" content="El equipo Bootic">

  <title><%= @page ? @page.title : 'Inicio' %> | Documentación Bootic</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
